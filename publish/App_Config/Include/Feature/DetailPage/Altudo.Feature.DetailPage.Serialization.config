		<unicorn>
			<configurations>
				<configuration name="Feature.DetailPage" dependencies="Foundation.Serialization" description="All detail page level config like rendrings, feature specific templates">
					<predicate>
						<include name="Detail Page Renderings" database="master" path="/sitecore/layout/Renderings/Feature/DetailPage" />						
